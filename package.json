{
    "name": "react-add-new",
    "version": "1.2.2",
    "description": "A CLI tool to create new React components",
    "main": "dist/index.js",
    "scripts": {
        "test": "jest --runInBand",
        "clean": "rimraf dist",
        "build": "npm run clean && esbuild src/index.ts src/cli.ts --bundle --platform=node --outdir=dist --packages=external",
        "prepublishOnly": "npm run build"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/grigorischristainas/react-add-new"
    },
    "keywords": [
        "react",
        "cli",
        "components"
    ],
    "author": "Grigorios Christainas",
    "license": "MIT",
    "devDependencies": {
        "@babel/preset-env": "^7.24.3",
        "@types/inquirer": "^9.0.7",
        "@types/inquirer-fuzzy-path": "^2.3.9",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.27",
        "babel-jest": "^29.7.0",
        "esbuild": "^0.20.2",
        "jest": "^29.7.0",
        "rimraf": "^5.0.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.2"
    },
    "bin": {
        "react-add-new": "./dist/cli.js"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "commander": "^11.1.0",
        "inquirer": "^8.2.6",
        "inquirer-fuzzy-path": "^2.3.0",
        "prettier": "^2.8.8"
    },
    "files": [
        "dist"
